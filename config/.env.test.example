# =============================================================================
# TEST ENVIRONMENT CONFIGURATION
# =============================================================================
# This configuration is optimized for testing and CI/CD
# Copy to .env.test and fill in your actual values

# =============================================================================
# ENVIRONMENT
# =============================================================================
APP_ENV=test

# =============================================================================
# RESILIENCE PATTERNS - TEST (Minimal Delays)
# =============================================================================
# Optimized for fast test execution

# Retry configuration (minimal)
RESILIENCE_MAX_RETRIES=1
RESILIENCE_RETRY_STRATEGY=constant
RESILIENCE_BASE_DELAY=0.1
RESILIENCE_MAX_DELAY=1.0

# Rate limiting configuration (high for fast tests)
RESILIENCE_RATE_LIMIT_CALLS=1000
RESILIENCE_RATE_LIMIT_WINDOW=1.0

# Circuit breaker configuration (disabled for tests)
RESILIENCE_CIRCUIT_BREAKER_ENABLED=false
RESILIENCE_CIRCUIT_BREAKER_THRESHOLD=100
RESILIENCE_CIRCUIT_BREAKER_TIMEOUT=1.0
RESILIENCE_CIRCUIT_BREAKER_HALF_OPEN_CALLS=1

# Request timeout (short for tests)
RESILIENCE_REQUEST_TIMEOUT=5.0

# =============================================================================
# DATABRICKS CONFIGURATION (Required for integration tests)
# =============================================================================
DATABRICKS_HOST=test-workspace.cloud.databricks.com
DATABRICKS_TOKEN=test-token-here
DATABRICKS_WAREHOUSE_ID=test-warehouse-id

# =============================================================================
# UNITY CATALOG CONFIGURATION (Optional)
# =============================================================================
UNITY_CATALOG_ENABLED=true
UNITY_CATALOG_CATALOG=test_catalog
UNITY_CATALOG_SCHEMA=test_schema

# =============================================================================
# AI PROVIDERS (Optional - for AI tests)
# =============================================================================
AI_PROVIDER_ENABLED=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# =============================================================================
# TEST RESOURCES (Optional)
# =============================================================================
DATABRICKS_JOBS_JOB_ID=
DATABRICKS_VECTOR_SEARCH_ENDPOINT=
DATABRICKS_NOTEBOOK_PATH=
DATABRICKS_APP_NAME=
DELTA_TABLE_NAME=
