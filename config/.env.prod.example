# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# This configuration is optimized for production workloads
# Copy to .env.prod and fill in your actual values

# =============================================================================
# ENVIRONMENT
# =============================================================================
APP_ENV=production

# =============================================================================
# RESILIENCE PATTERNS - PRODUCTION (High Availability)
# =============================================================================
# Optimized for reliability and resilience

# Retry configuration
RESILIENCE_MAX_RETRIES=5
RESILIENCE_RETRY_STRATEGY=exponential
RESILIENCE_BASE_DELAY=1.0
RESILIENCE_MAX_DELAY=120.0

# Rate limiting configuration (moderate)
RESILIENCE_RATE_LIMIT_CALLS=30
RESILIENCE_RATE_LIMIT_WINDOW=1.0

# Circuit breaker configuration (lenient for production)
RESILIENCE_CIRCUIT_BREAKER_ENABLED=true
RESILIENCE_CIRCUIT_BREAKER_THRESHOLD=15
RESILIENCE_CIRCUIT_BREAKER_TIMEOUT=90.0
RESILIENCE_CIRCUIT_BREAKER_HALF_OPEN_CALLS=5

# Request timeout (longer for production)
RESILIENCE_REQUEST_TIMEOUT=60.0

# =============================================================================
# DATABRICKS CONFIGURATION (Required)
# =============================================================================
DATABRICKS_HOST=your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-production-token-here
DATABRICKS_WAREHOUSE_ID=your-warehouse-id

# =============================================================================
# UNITY CATALOG CONFIGURATION (Optional)
# =============================================================================
UNITY_CATALOG_ENABLED=true
UNITY_CATALOG_CATALOG=production_catalog
UNITY_CATALOG_SCHEMA=default

# =============================================================================
# AI PROVIDERS (Optional)
# =============================================================================
AI_PROVIDER_ENABLED=true
ANTHROPIC_API_KEY=your-claude-api-key-here

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# PRODUCTION RESOURCES (Optional)
# =============================================================================
DATABRICKS_JOBS_JOB_ID=
DATABRICKS_VECTOR_SEARCH_ENDPOINT=
DATABRICKS_NOTEBOOK_PATH=
DATABRICKS_APP_NAME=
DELTA_TABLE_NAME=
